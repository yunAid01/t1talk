// Prisma schema 파일 경로
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// 사용자
model User {
  id              Int            @id @default(autoincrement())
  email           String         @unique
  password        String
  nickname        String
  profileImageUrl String?
  backgroundImageUrl String?
  statusMessage   String?
  createdAt       DateTime       @default(now())
  isMessageNotificationOn Boolean @default(true)
  isFriendNotificationOn  Boolean @default(true)
  isGroupInvitationNotificationOn Boolean @default(true)
  isPrivate       Boolean       @default(false)
  
  // Relations
  friends         Friend[]       @relation("UserFriends")
  friendOf        Friend[]       @relation("FriendOf")
  sentMessages    Message[]      @relation("MessageSender")
  chatRooms       ChatRoomUser[]
  readReceipts    ReadReceipt[]
}

// 친구 관계
model Friend {
  id          Int      @id @default(autoincrement())
  userId      Int
  friendId    Int
  isFavorite  Boolean  @default(false)
  isBlocked   Boolean  @default(false)
  createdAt   DateTime @default(now())
  
  user        User     @relation("UserFriends", fields: [userId], references: [id], onDelete: Cascade)
  friend      User     @relation("FriendOf", fields: [friendId], references: [id], onDelete: Cascade)
  
  @@unique([userId, friendId])
  @@index([userId])
  @@index([friendId])
}

// 채팅방
model ChatRoom {
  id          Int            @id @default(autoincrement())
  name        String?        // 그룹 채팅방 이름 (1:1은 null)
  isGroup     Boolean        @default(false)
  imageUrl    String?        // 그룹 프로필 이미지
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  
  // Relations
  users       ChatRoomUser[]
  messages    Message[]
}

// 채팅방 참여자 (중간 테이블)
model ChatRoomUser {
  id              Int       @id @default(autoincrement())
  chatRoomId      Int
  userId          Int
  isAdmin         Boolean   @default(false) // 그룹 채팅 관리자
  joinedAt        DateTime  @default(now())
  leftAt          DateTime? // 나간 시간 (null이면 현재 참여중)
  notificationOn  Boolean   @default(true)
  
  chatRoom        ChatRoom  @relation(fields: [chatRoomId], references: [id], onDelete: Cascade)
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([chatRoomId, userId])
  @@index([chatRoomId])
  @@index([userId])
}

// 메시지
model Message {
  id          Int           @id @default(autoincrement())
  chatRoomId  Int
  senderId    Int
  content     String        
  isDeleted   Boolean       @default(false)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  // Relations
  chatRoom    ChatRoom      @relation(fields: [chatRoomId], references: [id], onDelete: Cascade)
  sender      User          @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)
  readReceipts ReadReceipt[]
  
  @@index([chatRoomId])
  @@index([senderId])
  @@index([createdAt])
}

// 읽음 상태
model ReadReceipt {
  id          Int      @id @default(autoincrement())
  messageId   Int
  userId      Int
  readAt      DateTime @default(now())
  
  message     Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([messageId, userId])
  @@index([messageId])
  @@index([userId])
}